<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <package name="StrutsApp" namespace="/" extends="struts-default">
        <action name="testAction" class="com.gr8erkay.strutsapp.TestAction">
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="registerAction" class="com.gr8erkay.strutsapp.RegisterAction">
            <result name="input">/register.jsp</result>
            <result name="success">/welcome.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="databaseAction" class="com.gr8erkay.strutsapp.DatabaseAction">
            <result name="input">/register.jsp</result>
            <result name="success">/welcome.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="databaseTest" class="com.gr8erkay.strutsapp.DatabaseTest">
            <result name="input">/register.jsp</result>
            <result name="success">/welcome.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

    </package>

</struts>